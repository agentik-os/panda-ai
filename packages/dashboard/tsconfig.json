{
  "extends": "../tsconfig/nextjs.json",
  "compilerOptions": {
    "outDir": ".next",
    "skipLibCheck": true,
    "types": ["node", "react", "react-dom"],
    "paths": {
      "@/*": ["./*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
