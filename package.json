{
  "name": "panda-ai",
  "version": "1.0.0",
  "private": true,
  "description": "Panda AI - Multi-Model AI Platform with Beautiful Dashboard",
  "repository": {
    "type": "git",
    "url": "https://github.com/agentik-os/panda-ai"
  },
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md}\"",
    "type-check": "turbo type-check",
    "test": "turbo test",
    "test:ci": "vitest run --coverage",
    "test:e2e": "turbo test:e2e",
    "clean": "turbo clean && rm -rf node_modules",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@turbo/gen": "^2.3.3",
    "@types/eslint__js": "^9.14.0",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.55.0",
    "vitest": "^4.0.18"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yaml,yml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@sentry/nextjs": "^10.38.0",
    "@sentry/node": "^10.38.0",
    "axios": "^1.13.5",
    "cheerio": "^1.2.0",
    "convex": "^1.31.7",
    "prom-client": "^15.1.3"
  }
}
