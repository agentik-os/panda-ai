{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "declaration": true,
    "noEmit": true,
    "typeRoots": []
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "tests"]
}
