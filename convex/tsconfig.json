{
  "extends": "../packages/tsconfig/base.json",
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "noEmit": true,
    "paths": {
      "convex/*": ["./*"]
    }
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "_generated"]
}
